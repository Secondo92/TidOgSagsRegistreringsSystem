<Window x:Class="WPFApp.EditCaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Case" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
        <TextBlock Text="Overskrift:" Margin="5" />
        <TextBox x:Name="HeadlineTextBox" Margin="5" />

        <TextBlock Text="Beskrivelse:" Margin="5" />
        <TextBox x:Name="DescriptionTextBox" Margin="5" />

        <TextBlock Text="Afdeling:" Margin="5" />
        <ComboBox x:Name="CaseDepartmentDropDown" Margin="5">
            <ComboBoxItem Content="IT" />
            <ComboBoxItem Content="HR" />
            <ComboBoxItem Content="Sales" />
        </ComboBox>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="40">
                <Button Content="Annuller" Click="EditCaseCancel_Click" Margin="5"/>
                <Button Content="Ok" Click="EditCaseOk_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
        
    
</Window>
