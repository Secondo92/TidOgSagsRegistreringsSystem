@model DTO.Models.TimeRegistrationDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Opret Tidsregistrering</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Opret Tidsregistrering</h2>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="StartTime" class="form-label">Starttid</label>
                <input type="datetime-local" class="form-control" id="StartTime" name="StartTime" required />
            </div>
            <div class="mb-3">
                <label for="EndTime" class="form-label">Sluttid</label>
                <input type="datetime-local" class="form-control" id="EndTime" name="EndTime" required />
            </div>

            <div class="mb-3">
                <label for="CaseNumber" class="form-label">Vælg sag:</label>
                <select class="form-select" id="CaseNumber" name="CaseNumber" required>
                    <option value="">Vælg en sag</option>
                    @foreach (var caseItem in (IEnumerable<DTO.Models.CaseDTO>)ViewData["Cases"])
                    {
                        <option value="@caseItem.CaseNumber">@caseItem.Headline</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Gem Tidsregistrering</button>
        </form>
    </div>
</body>
</html>
