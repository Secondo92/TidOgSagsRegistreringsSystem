@model List<DTO.Models.EmployeeDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Medarbejdere</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Medarbejdere</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Afdeling</th>
                    <th>Cpr</th>
                    <th>Initialer</th>
                    <th>Opret</th>
                    <th>Vis</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.DepartmentName</td>
                        <td>@employee.CprNumber</td>
                        <td>@employee.Initials</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Create", "TimeRegistration", new { employeeId = employee.CprNumber })">
                                Opret Tidsregistrering
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("WeeklySummary", "TimeRegistration", new { employeeId = employee.CprNumber })">
                                Vis Ugentligt Overblik
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>