@model IEnumerable<DTO.Models.EmployeeDTO>

@{
    ViewData["Title"] = "Medarbejdere";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Afdeling</th>
                    <th>CPR-nummer</th>
                    <th>Initialer</th>
                    <th>Opret</th>
                    <th>Vis</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => employee.Name)</td>
                        <td>@Html.DisplayFor(m => employee.DepartmentName)</td>
                        <td>@Html.DisplayFor(m => employee.CprNumber)</td>
                        <td>@Html.DisplayFor(m => employee.Initials)</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Create", "TimeRegistration", new { employeeId = employee.CprNumber })">
                                Opret Tidsregistrering
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("WeeklySummary", "TimeRegistration", new { employeeId = employee.CprNumber })">
                                Vis Ugentligt Overblik
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
