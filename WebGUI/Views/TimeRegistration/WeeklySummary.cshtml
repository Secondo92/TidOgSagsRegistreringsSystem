@model List<DTO.Models.TimeReportDTO>
@{
    var employee = (DTO.Models.EmployeeDTO)ViewData["Employee"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Ugentligt Overblik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Ugentligt Overblik for @employee.Name</h2>
        <p><strong>Afdeling:</strong> @employee.DepartmentName</p>
        <p><strong>CPR:</strong> @employee.CprNumber</p>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Periode</th>
                    <th>Totale Timer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Period</td>
                        <td>@report.TotalHours</td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-secondary mt-3" href="@Url.Action("Index", "TimeRegistration")">Tilbage til Medarbejdere</a>
    </div>
</body>
</html>
