@model IEnumerable<DTO.Models.TimeReportDTO>

@{
    ViewData["Title"] = "Ugentligt Overblik";
    var employee = ViewData["Employee"] as DTO.Models.EmployeeDTO;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"] for @Html.DisplayFor(model => employee.Name)</h2>
        <p><strong>Afdeling:</strong> @Html.DisplayFor(model => employee.DepartmentName)</p>
        <p><strong>CPR:</strong> @Html.DisplayFor(model => employee.CprNumber)</p>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Period)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TotalHours)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => report.Period)</td>
                        <td>@Html.DisplayFor(m => report.TotalHours)</td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-secondary mt-3" href="@Url.Action("Index", "TimeRegistration")">Tilbage til Medarbejdere</a>
    </div>
</body>
</html>
